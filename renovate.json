{
  "extends": [
    "config:base",
    ":gitSignOff"
  ],
  "labels": [
    "dependency"
  ],
  "regexManagers": [
  {
    "fileMatch": ["^Vagrantfile$"],
    "matchStrings": [
      "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?_version\\s=\\s=\\s'(?<currentValue>.+)'"
    ],
    "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
  },
  {
    "fileMatch": ["^role\\/.*\\.sh$"],
    "matchStrings": [
      "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?_VERSION=(?<currentValue>.*)"
    ],
    "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
  }
  ]
}